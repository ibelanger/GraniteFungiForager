// ============================================================================
// PROBABILITY CALCULATION MULTIPLIERS FOR mapcalculations.js
// ============================================================================

const batch1ProbabilityMultipliers = {
  
  // Temperature scoring specific to these species
  soilTempScore: function(species, soilTempF) {
    const ranges = {
      blackTrumpet: {min: 55, max: 70, optimal: 62},
      maitake: {min: 50, max: 68, optimal: 59},
      trumpetChanterelle: {min: 50, max: 68, optimal: 60},
      lobster: {min: 55, max: 75, optimal: 65},
      milkCap: {min: 60, max: 80, optimal: 70}
    };
    
    const range = ranges[species];
    if (!range) return 0.5;
    
    if (soilTempF < range.min - 10 || soilTempF > range.max + 10) return 0.0;
    if (soilTempF < range.min || soilTempF > range.max) return 0.3;
    if (Math.abs(soilTempF - range.optimal) <= 5) return 1.0;
    return 0.7;
  },
  
  // Season-specific scoring
  seasonScore: function(species, currentDate) {
    const month = currentDate.getMonth(); // 0-11
    const day = currentDate.getDate();
    
    const seasonRanges = {
      blackTrumpet: {start: [6, 15], peak: [7, 15, 9, 30], end: [11, 15]}, // July-Nov
      maitake: {start: [8, 20], peak: [9, 1, 10, 15], end: [11, 1]}, // Late Aug-Oct
      trumpetChanterelle: {start: [7, 15], peak: [8, 15, 10, 15], end: [11, 30]}, // Aug-Nov
      lobster: {start: [6, 15], peak: [7, 15, 9, 15], end: [10, 15]}, // July-Oct
      milkCap: {start: [5, 15], peak: [7, 1, 8, 31], end: [10, 1]} // June-Sept
    };
    
    const range = seasonRanges[species];
    if (!range) return 0.5;
    
    // Convert dates to day-of-year for comparison
    const dayOfYear = Math.floor((currentDate - new Date(currentDate.getFullYear(), 0, 0)) / 86400000);
    const startDay = Math.floor((new Date(currentDate.getFullYear(), range.start[0], range.start[1]) - new Date(currentDate.getFullYear(), 0, 0)) / 86400000);
    const peakStartDay = Math.floor((new Date(currentDate.getFullYear(), range.peak[0], range.peak[1]) - new Date(currentDate.getFullYear(), 0, 0)) / 86400000);
    const peakEndDay = Math.floor((new Date(currentDate.getFullYear(), range.peak[2], range.peak[3]) - new Date(currentDate.getFullYear(), 0, 0)) / 86400000);
    const endDay = Math.floor((new Date(currentDate.getFullYear(), range.end[0], range.end[1]) - new Date(currentDate.getFullYear(), 0, 0)) / 86400000);
    
    if (dayOfYear < startDay || dayOfYear > endDay) return 0.0;
    if (dayOfYear >= peakStartDay && dayOfYear <= peakEndDay) return 1.0;
    if (dayOfYear >= startDay && dayOfYear < peakStartDay) return 0.5;
    if (dayOfYear > peakEndDay && dayOfYear <= endDay) return 0.6;
    return 0.3;
  },
  
  // Oak association multiplier
  oakProximityMultiplier: function(species, oakPresent, dominantTreeType) {
    const oakDependent = ['maitake', 'milkCap'];
    const oakPreferred = ['blackTrumpet'];
    
    if (oakDependent.includes(species)) {
      if (!oakPresent) return 0.1;
      if (dominantTreeType === 'oak') return 1.2;
      return 0.8;
    }
    
    if (oakPreferred.includes(species)) {
      if (dominantTreeType === 'oak') return 1.1;
      return 1.0;
    }
    
    return 1.0;
  },
  
  // Moss presence multiplier (Black Trumpets, Trumpet Chanterelles)
  mossMultiplier: function(species, mossPresent) {
    const mossLovers = ['blackTrumpet', 'trumpetChanterelle'];
    if (mossLovers.includes(species) && mossPresent) return 1.3;
    return 1.0;
  },
  
  // Conifer preference (Trumpet Chanterelles specifically C. tubaeformis)
  coniferMultiplier: function(species, subspecies, coniferPresent) {
    if (species === 'trumpetChanterelle' && subspecies === 'tubaeformis' && coniferPresent) {
      return 1.4;
    }
    return 1.0;
  }
};


