// ============================================================================
// PROBABILITY CALCULATION MULTIPLIERS FOR mapcalculations.js
// ============================================================================

const probabilityMultipliers = {
  // Soil temperature scoring (0.0 to 1.0)
  soilTempScore: function(species, soilTempF) {
    const data = speciesData[species];
    if (!data || !data.optimalSoilTemp) return 0.5;
    
    const {min, max, optimal} = data.optimalSoilTemp;
    if (soilTempF < min - 10 || soilTempF > max + 10) return 0.0;
    if (soilTempF < min || soilTempF > max) return 0.3;
    if (optimal && Math.abs(soilTempF - optimal) <= 3) return 1.0;
    return 0.7;
  },
  
  // Precipitation correlation (abundance predictor)
  precipitationScore: function(species, thirtyDayPrecipInches, daysSinceSignificantRain) {
    let score = 0.5;
    
    // 30-day cumulative correlation (most validated)
    if (thirtyDayPrecipInches >= 4.0) score += 0.3;
    else if (thirtyDayPrecipInches >= 2.0) score += 0.2;
    else if (thirtyDayPrecipInches < 1.0) score -= 0.3;
    
    // Days since rain (less validated, use cautiously)
    if (daysSinceSignificantRain >= 3 && daysSinceSignificantRain <= 14) score += 0.2;
    else if (daysSinceSignificantRain > 21) score -= 0.2;
    
    return Math.max(0, Math.min(1, score));
  },
  
  // Elevation-adjusted timing
  elevationDelay: function(species, elevationFeet) {
    // Returns estimated days of phenological delay
    const delaysPerThousandFeet = {
      morel: 10,
      matsutake: 8,
      chanterelle: 10,
      kingBolete: 10,
      hedgehog: -5  // Higher elevations fruit EARLIER
    };
    const delay = delaysPerThousandFeet[species] || 7;
    return Math.round((elevationFeet / 1000) * delay);
  },
  
  // Slope aspect multiplier
  slopeAspectMultiplier: function(species, aspect, seasonProgress) {
    // seasonProgress: 0.0 = early season, 1.0 = late season
    const northFacing = ['north', 'northwest', 'northeast'];
    const southFacing = ['south', 'southwest', 'southeast'];
    
    if (seasonProgress < 0.3) {
      // Early season: south-facing preferred
      if (southFacing.includes(aspect.toLowerCase())) return 1.2;
      if (northFacing.includes(aspect.toLowerCase())) return 0.8;
    } else if (seasonProgress > 0.7) {
      // Late season: north-facing preferred
      if (northFacing.includes(aspect.toLowerCase())) return 1.2;
      if (southFacing.includes(aspect.toLowerCase())) return 0.8;
    }
    return 1.0;
  }
};


